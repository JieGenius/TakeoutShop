<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserCenterFragment"
    android:orientation="vertical"
    >
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/SingInActivityTextViewStyle"
            android:text="商店名称"
            />
        <TextView
            android:id="@+id/shop_user_center_name"
            style="@style/SingInActivityEditTextStyle"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/SingInActivityTextViewStyle"
            android:text="商店地址"
            />
        <TextView
            android:id="@+id/shop_user_center_address"
            style="@style/SingInActivityEditTextStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/SingInActivityTextViewStyle"
            android:text="手机号"
            />
        <TextView
            android:id="@+id/shop_user_center_phone"
            style="@style/SingInActivityEditTextStyle"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/SingInActivityTextViewStyle"
            android:text="营业时间"
            />
        <TextView
            android:id="@+id/shop_user_center_time"
            style="@style/SingInActivityEditTextStyle"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/SingInActivityTextViewStyle"
            android:text="月销售量"
            />
        <TextView
            android:id="@+id/shop_user_center_sales"
            style="@style/SingInActivityEditTextStyle"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/SingInActivityTextViewStyle"
            android:text="当前评分"
            />
        <TextView
            android:id="@+id/shop_user_center_grade"
            style="@style/SingInActivityEditTextStyle"
            />
    </LinearLayout>

</LinearLayout>